<Window
    x:Class="Snoop.Client.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:client="clr-namespace:Snoop.Client"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Parent"
    Title="Rebus SQL Server Snoop"
    Width="1250"
    Height="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400*" />
            <ColumnDefinition Width="300*" />
            <ColumnDefinition Width="500*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="225" />
            <RowDefinition Height="550*" />
        </Grid.RowDefinitions>
        <Border
            Grid.Column="0"
            Margin="5"
            BorderBrush="Black"
            BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <WrapPanel>
                    <TextBlock
                        Margin="10,0,10,0"
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="Bold"
                        Text="Connections" />
                    <Button
                        Margin="5"
                        Command="{Binding AddCommand}"
                        Content="New" />
                </WrapPanel>
                <ListView
                    Grid.Row="1"
                    HorizontalContentAlignment="Stretch"
                    ItemsSource="{Binding Connections}"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    SelectedItem="{Binding SelectedConnection}">
                    <ListView.ItemTemplate>
                        <DataTemplate DataType="client:ConnectionViewModel">
                            <TextBox Margin="5" Text="{Binding ConnectionString, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>
        <Border
            Grid.Row="0"
            Grid.Column="1"
            Margin="5"
            Padding="2"
            BorderBrush="Black"
            BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock
                    Grid.Row="0"
                    FontSize="14"
                    FontWeight="Bold"
                    Text="Tables" />
                <ListView
                    Grid.Row="1"
                    BorderThickness="0"
                    ItemsSource="{Binding SelectedConnection.Tables}"
                    SelectedItem="{Binding SelectedConnection.SelectedTable}">
                    <ListView.ItemTemplate>
                        <DataTemplate DataType="client:TableViewModel">
                            <WrapPanel>
                                <TextBlock Text="{Binding Name}" />
                                <TextBlock>
                                    <Run Text="(" />
                                    <Run Text="{Binding MessageCount}" />
                                    <Run Text=")" />
                                </TextBlock>
                                <Button
                                    Command="{Binding ElementName=Parent, Path=DataContext.SelectedConnection.ReloadMessagesCommand}"
                                    CommandParameter="{Binding}"
                                    Content="Reload" />
                                <Button
                                    Command="{Binding ElementName=Parent, Path=DataContext.SelectedConnection.PurgeCommand}"
                                    CommandParameter="{Binding}"
                                    Content="Purge" />
                                <Button
                                    Command="{Binding ElementName=Parent, Path=DataContext.SelectedConnection.ReturnAllToSourceQueueCommand}"
                                    CommandParameter="{Binding}"
                                    Content="Return all to source queue" />
                            </WrapPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>
        <Border
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="5"
            BorderBrush="Black"
            BorderThickness="1">
            <ListView ItemsSource="{Binding SelectedConnection.SelectedTable.Messages}" SelectedItem="{Binding SelectedConnection.SelectedTable.SelectedMessage}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn
                            Width="Auto"
                            DisplayMemberBinding="{Binding Type}"
                            Header="Message type" />
                        <GridViewColumn
                            Width="Auto"
                            DisplayMemberBinding="{Binding SourceQueue}"
                            Header="Source queue" />
                        <GridViewColumn
                            Width="Auto"
                            DisplayMemberBinding="{Binding SentTime}"
                            Header="Sent time" />
                        <GridViewColumn
                            Width="Auto"
                            DisplayMemberBinding="{Binding VisibleFrom}"
                            Header="Visible from" />
                        <GridViewColumn
                            Width="Auto"
                            DisplayMemberBinding="{Binding ExpiresAt}"
                            Header="Expires at" />
                        <GridViewColumn Width="Auto" Header="Actions">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button
                                            Width="50"
                                            Command="{Binding ElementName=Parent, Path=DataContext.SelectedConnection.SelectedTable.DeleteMessageCommand}"
                                            CommandParameter="{Binding}"
                                            Content="Delete" />
                                        <Button
                                            Margin="5,0,0,0"
                                            Command="{Binding ElementName=Parent, Path=DataContext.SelectedConnection.SelectedTable.ReturnToSourceQueueCommand}"
                                            CommandParameter="{Binding}"
                                            Content="Return to source queue" />
                                    </StackPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>
        <Border
            Grid.Row="0"
            Grid.Column="2"
            Margin="5"
            BorderBrush="Black"
            BorderThickness="1">
            <ListView ItemsSource="{Binding SelectedConnection.SelectedTable.SelectedMessage.Headers}">

                <ListView.View>
                    <GridView>
                        <GridViewColumn
                            Width="Auto"
                            DisplayMemberBinding="{Binding Key}"
                            Header="Key" />
                        <GridViewColumn
                            Width="Auto"
                            DisplayMemberBinding="{Binding Value}"
                            Header="Value" />
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>
        <Border
            Grid.Row="1"
            Grid.Column="2"
            Margin="5"
            Padding="5"
            BorderBrush="Black"
            BorderThickness="1">
            <ScrollViewer>
                <StackPanel>
                    <StackPanel>
                        <TextBlock FontWeight="Bold" Text="Body:" />
                        <TextBlock Text="{Binding SelectedConnection.SelectedTable.SelectedMessage.Body}" />
                    </StackPanel>
                    <StackPanel Margin="0,10,0,0">
                        <TextBlock FontWeight="Bold" Text="Error:" />
                        <TextBlock
                            MaxWidth="480"
                            Text="{Binding SelectedConnection.SelectedTable.SelectedMessage.ErrorDetails}"
                            TextWrapping="WrapWithOverflow" />
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
